
<p id="notice"><%= notice %></p>

  <div class="jumbotron">
    <h1>My To Do List!</h1>
  </div>

<table class="table">
  <thead>
    <tr>
      <th><h2>To do's</h2></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Cross off', todo_item, class: 'btn btn-danger', method: :delete, data: { confirm: 'Did you really finish this?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Next on the to do\'s..', new_todo_item_path, class: 'btn btn-primary' %>
